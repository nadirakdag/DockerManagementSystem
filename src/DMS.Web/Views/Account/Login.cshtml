@model DMS.Web.Models.ViewModels.HomeViewModels.LoginViewModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <!-- Site Properties -->
    <title>Login Example - Semantic</title>
    <link rel="stylesheet" type="text/css" href="/components/reset.min.css">
    <link rel="stylesheet" type="text/css" href="/components/site.min.css">
    <link rel="stylesheet" type="text/css" href="/components/container.min.css">
    <link rel="stylesheet" type="text/css" href="/components/grid.min.css">
    <link rel="stylesheet" type="text/css" href="/components/header.min.css">
    <link rel="stylesheet" type="text/css" href="/components/image.min.css">
    <link rel="stylesheet" type="text/css" href="/components/menu.min.css">
    <link rel="stylesheet" type="text/css" href="/components/divider.min.css">
    <link rel="stylesheet" type="text/css" href="/components/segment.min.css">
    <link rel="stylesheet" type="text/css" href="/components/form.min.css">
    <link rel="stylesheet" type="text/css" href="/components/input.min.css">
    <link rel="stylesheet" type="text/css" href="/components/button.min.css">
    <link rel="stylesheet" type="text/css" href="/components/list.min.css">
    <link rel="stylesheet" type="text/css" href="/components/message.min.css">
    <link rel="stylesheet" type="text/css" href="/components/icon.min.css">
    <script src="https://code.jquery.com/jquery-2.2.3.min.js"></script>
    <script src="/components/form.min.js"></script>
    <script src="/components/transition.min.js"></script>
    <style type="text/css">
        body > .grid {
            height: 100%;
        }

        .image {
            margin-top: -100px;
        }

        .column {
            max-width: 450px;
        }
    </style>
    <script>
        $(document)
          .ready(function () {
              $('.ui.form').form({
                  fields: {
                      email: {
                          identifier: 'email',
                          rules: [
                            {
                                type: 'empty',
                                prompt: 'Please enter your e-mail'
                            },
                            {
                                type: 'email',
                                prompt: 'Please enter a valid e-mail'
                            }
                          ]
                      },
                      password: {
                          identifier: 'password',
                          rules: [
                            {
                                type: 'empty',
                                prompt: 'Please enter your password'
                            },
                            {
                                type: 'length[6]',
                                prompt: 'Your password must be at least 6 characters'
                            }
                          ]
                      }
                  }
              });
          });
    </script>
</head>
<body>
  
    <div class="ui middle aligned center aligned grid">

        <div class="column">
            @if (Model.OperationStatus != null && Model.OperationMessage != null)
            {
                <div class="ui @(Model.OperationStatus==false?"error":"success") message">
                    <i class="close icon"></i>
                    <div class="content">
                        <div class="header">
                            Information
                        </div>
                        <p>@Model.OperationMessage</p>
                    </div>
                </div>
            }
            <h2 class="ui teal header">
                <div class="content">
                    Log-in to your account
                </div>
            </h2>
            <form class="ui large form" method="post" asp-action="login" asp-controller="Account">
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="UserName" placeholder="E-mail address">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="password" placeholder="Password">
                        </div>
                    </div>
                    <div class="ui fluid large teal submit button">Login</div>
                </div>
                <div class="ui error message"></div>
            </form>
        </div>
    </div>
</body>
</html>
